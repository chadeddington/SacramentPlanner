@page
@model SacramentPlanner.Pages.Meetings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meetings[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meetings[0].Conductor)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Meetings[0].OpeningPrayer)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Meetings[0].Speakers)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Meetings[0].ClosingPrayer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Meetings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conductor)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.OpeningPrayer)
            </td>

            <td>
                <ul>
                    @foreach (var speaker in item.Speakers)
                    {
                        <li>@speaker.FullName</li>
                    }
                </ul>
               
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ClosingPrayer)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
